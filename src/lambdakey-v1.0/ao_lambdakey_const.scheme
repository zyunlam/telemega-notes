					; (if <condition> <if-true>)
					; (if <condition> <if-true> <if-false)

(define if
  (macro (test . args)
    (cond ((null? (cdr args))
	   (list cond (list test (car args)))
		)
	  (else
	   (list cond
		 (list test (car args))
		 (list 'else (cadr args))
		 )
	   )
	  )
    )
  )

